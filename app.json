{
    "name": "Play Song Bot",
    "logo": "https://telegra.ph/file/34e8b5cd572fddadf6115.jpg",
    "description": "Grabs song from yt and sends it to telegram by @YogeshBots",
    "env": {
        "API_ID": {
            "description": "Get this value from my.telegram.org.",
            "required": true
        },
        "API_HASH": {
            "description": "Get this value from my.telegram.org.",
            "required": true
        },
        "BOT_TOKEN": {
            "description": "Get this value by making a bot from @BotFather.",
            "required": true
        },
        "FORCE_SUB": {
            "description": "A telegram channel username without @ to force users to join channel before using bot.",
            "required": true
        },
        
        "OWNER_ID": {
            "description": "Your telegram user id.",
            "required": true
        }
    },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ],
    "addons": [
        {
            "plan": "heroku-postgresql",
            "options": {
                "version": "12"
            }
        }
    ],
    "formation": {
        "worker": {
            "quantity": 1,
            "size": "free"
        }
    }
}
